.tipoc_CONS
  display none
  border 1px solid black
  background-color #FF8
  font-weight bold
  font-size 80%
  > .propios > .nombre
    padding-left 4px
  > .propios > .casillero
    background-color black
    color #F80
    padding-left 4px
    padding-right 4px

[status-consistencia="inconsistente"]
  display inherit
